<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
        "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"

<module name="Checker">
    <!-- Specify the severity level of Checkstyle violations -->
    <property name="severity" value="warning"/>

    <!-- Specify the location of the source code -->
    <property name="fileExtensions" value="java"/>
    <property name="charset" value="UTF-8"/>

    <module name="TreeWalker">
        <!-- Specify indentation rules -->
        <module name="Indentation">
            <property name="basicOffset" value="4"/>
            <property name="braceAdjustment" value="0"/>
            <property name="caseIndent" value="4"/>
            <property name="throwsIndent" value="4"/>
            <property name="lineWrappingIndentation" value="4"/>
        </module>

        <!-- Specify the rules for empty line separators -->
        <module name="EmptyLineSeparator">
            <property name="allowMultipleEmptyLines" value="true"/>
            <property name="allowNoEmptyLineWithoutJavadoc" value="true"/>
            <property name="tokens" value="METHOD_DEF,CTOR_DEF,CLASS_DEF,INTERFACE_DEF,ENUM_DEF,ANNOTATION_DEF"/>
        </module>

        <!-- Specify JavaDoc style rules -->
        <module name="JavadocStyle"/>

        <!-- Specify naming conventions rules -->
        <module name="MemberName"/>
        <module name="ParameterName"/>
        <module name="MethodName"/>

        <!-- Specify rules for JavaDoc comments in methods -->
        <module name="JavadocMethod"/>

        <!-- Specify rules for line length -->
        <module name="LineLength">
            <property name="max" value="120"/>
            <property name="ignorePattern" value="^import.*$|^package.*$|^public\sclass\s.*\sextends\s[a-zA-Z]+.*$"/>
        </module>
    </module>
</module>